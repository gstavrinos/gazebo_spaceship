    <link name="top_thruster_link">
      <visual>
        <geometry>
          <box size="0.1 0.1 0.3"/>
        </geometry>
        <origin xyz="0 0 1.3"/>
        <material name="black"/>
      </visual>
    </link>

    <joint name="top_thruster_joint" type="fixed" >
      <parent link="base_link" />
      <child link="top_thruster_link" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="bottom_thruster_link">
      <visual>
        <geometry>
          <box size="1 1 0.3"/>
        </geometry>
        <origin xyz="0 0 -1.3"/>
        <material name="black"/>
      </visual>
    </link>

    <joint name="bottom_thruster_joint" type="fixed" >
      <parent link="base_link" />
      <child link="bottom_thruster_link" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

</robot>